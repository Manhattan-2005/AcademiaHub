<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Events_Fragment"
    xmlns:tools="http://schemas.android.com/tools">

    <!--   only for admin   -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/event_navigators"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:visibility="gone"
        app:columnCount="1"
        app:rowCount="2">

        <!--      View Events      -->
        <androidx.cardview.widget.CardView
            android:id="@+id/view_events"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            android:layout_width="160dp"
            app:cardCornerRadius="25dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="0"
            app:layout_rowWeight="1">

            <LinearLayout
                android:background="@drawable/homepage_buttons"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:backgroundTint="@color/bg_color"
                    android:contentDescription="@string/view_events"
                    android:layout_height="70dp"
                    android:layout_width="70dp"
                    android:src="@drawable/events_icon_dark" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:text="@string/view_events"
                    android:textSize="17sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--     Add Event (Only for admin)      -->
        <androidx.cardview.widget.CardView
            android:id="@+id/add_event"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            android:layout_width="160dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="12dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:background="@drawable/homepage_buttons"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:backgroundTint="@color/bg_color"
                    android:contentDescription="@string/add_event"
                    android:layout_height="70dp"
                    android:layout_width="70dp"
                    android:src="@drawable/add_event_icon_dark" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:text="@string/add_event"
                    android:textSize="17sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>

</FrameLayout>